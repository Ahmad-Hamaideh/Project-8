@model IEnumerable<Project_8_MVC_Batool.Major>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>
<style>
    .thumbnail {
        top: -50px;
        left: -35px;
        display: block;
        z-index: 999;
        cursor: pointer;
        -webkit-transition-property: all;
        -webkit-transition-duration: 0.3s;
        -webkit-transition-timing-function: ease;
    }


        .thumbnail:hover {
            transform: scale(5);
        }
</style>
<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table table-responsive">
    <tr>
        <th>
            Name
        </th>

        <th>
        Description
        </th>
        <th>
          Price
        </th>
        <th>
            Number of Hour
        </th>
        <th>
           Minimum Rate
        </th>
        <th>
           Faculity
        </th>
        <th>
          Image
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.MajorName)
        </td>

        <td>
            @Html.DisplayFor(modelItem => item.Major_Description)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Price_OfHour)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Number_OfHour)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.minimum_rate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Faculty.FaculityName)
        </td>
        <td>
<img  src="~/image/@item.MajorImage" width="50" height="50" class="thumbnail" />   
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.MajorID } , new { @class = "btn btn-success" }) |
            @Html.ActionLink("Details", "Details", new { id = item.MajorID } , new { @class = "btn btn-info" }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.MajorID } , new { @class = "btn btn-danger" })
        </td>
    </tr>
}

</table>
